{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*"
            ]
        },
        "lib": [
            "es6",
            "dom"
        ],
        "target": "es6",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "ES6",
        "moduleResolution": "node",
        "preserveConstEnums": true
    }
}
